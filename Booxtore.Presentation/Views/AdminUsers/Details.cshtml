@model Booxtore.Presentation.ViewModels.EditUserViewModel

@{
    ViewData["Title"] = "User Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="fas fa-user me-2"></i>User Details</h4>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-light btn-sm">
                            <i class="fas fa-edit me-1"></i>Edit
                        </a>
                        <a asp-action="Index" class="btn btn-outline-light btn-sm">
                            <i class="fas fa-arrow-left me-1"></i>Back to List
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 text-center border-end">
                            <div class="bg-primary rounded-circle text-white mx-auto mb-3 d-flex align-items-center justify-content-center" 
                                 style="width: 120px; height: 120px; font-size: 3rem;">
                                @(Model.FirstName?.First().ToString().ToUpper() ?? "U")
                            </div>
                            <h3 class="text-primary">@Model.FirstName @Model.LastName</h3>
                            <p class="text-muted mb-3">@Model.UserName</p>
                            
                            @{
                                var statusClass = Model.Status == "Active" ? "bg-success" : "bg-danger";
                            }
                            <span class="badge @statusClass fs-6 px-3 py-2">@Model.Status</span>
                        </div>
                        
                        <div class="col-md-8">
                            <div class="row">
                                <div class="col-md-6">
                                    <h5 class="text-secondary mb-3">Contact Information</h5>
                                    <table class="table table-borderless">
                                        <tr>
                                            <td class="fw-bold text-muted">Email:</td>
                                            <td>@Model.Email</td>
                                        </tr>
                                        <tr>
                                            <td class="fw-bold text-muted">Phone:</td>
                                            <td>@(string.IsNullOrEmpty(Model.PhoneNumber) ? "Not provided" : Model.PhoneNumber)</td>
                                        </tr>
                                        <tr>
                                            <td class="fw-bold text-muted">Username:</td>
                                            <td>@Model.UserName</td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="col-md-6">
                                    <h5 class="text-secondary mb-3">Account Information</h5>
                                    <table class="table table-borderless">
                                        <tr>
                                            <td class="fw-bold text-muted">Member Since:</td>
                                            <td>@(Model.CreatedAt?.ToString("MMMM dd, yyyy") ?? "N/A")</td>
                                        </tr>
                                        <tr>
                                            <td class="fw-bold text-muted">Last Updated:</td>
                                            <td>@(Model.UpdatedAt?.ToString("MMMM dd, yyyy") ?? "Never")</td>
                                        </tr>
                                        <tr>
                                            <td class="fw-bold text-muted">Status:</td>
                                            <td><span class="badge @statusClass">@Model.Status</span></td>
                                        </tr>
                                    </table>
                                </div>
                            </div>

                            <hr class="my-4">

                            <h5 class="text-secondary mb-3">Activity Summary</h5>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="card bg-primary text-white text-center">
                                        <div class="card-body">
                                            <i class="fas fa-handshake fa-2x mb-2"></i>
                                            <h4 class="fw-bold">@Model.TotalBorrowings</h4>
                                            <p class="mb-0">Total Borrowings</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="card bg-success text-white text-center">
                                        <div class="card-body">
                                            <i class="fas fa-shopping-cart fa-2x mb-2"></i>
                                            <h4 class="fw-bold">@Model.TotalPurchases</h4>
                                            <p class="mb-0">Total Purchases</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="card bg-warning text-white text-center">
                                        <div class="card-body">
                                            <i class="fas fa-star fa-2x mb-2"></i>
                                            <h4 class="fw-bold">@Model.TotalReviews</h4>
                                            <p class="mb-0">Reviews Written</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-light">
                    <div class="d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit me-2"></i>Edit User
                        </a>
                        @if (Model.Status == "Active")
                        {
                            <button type="button" class="btn btn-danger" onclick="toggleUserStatus('@Model.Id', 'Inactive')">
                                <i class="fas fa-user-times me-2"></i>Deactivate User
                            </button>
                        }
                        else
                        {
                            <button type="button" class="btn btn-success" onclick="toggleUserStatus('@Model.Id', 'Active')">
                                <i class="fas fa-user-check me-2"></i>Activate User
                            </button>
                        }
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to Users
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function toggleUserStatus(userId, newStatus) {
            if (confirm(`Are you sure you want to ${newStatus.toLowerCase()} this user?`)) {
                fetch(`/AdminUsers/ToggleStatus/${userId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    body: JSON.stringify({ status: newStatus })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Error updating user status');
                    }
                });
            }
        }
    </script>
}
