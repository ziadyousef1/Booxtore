                            </li>
                            <li class="nav-item">
                                <a class="nav-link me-4" asp-area="" asp-controller="About" asp-action="Index">About</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link me-4" asp-area="" asp-controller="Shop" asp-action="Index">Shop</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link me-4" asp-area="" asp-controller="Blog" asp-action="Index">Blogs</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link me-4" asp-area="" asp-controller="Contact" asp-action="Index">Contact</a>
                            </li>
                            @using Microsoft.AspNetCore.Identity
@using Syncfusion.EJ2
