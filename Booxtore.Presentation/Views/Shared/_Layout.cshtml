    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" 
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    
    <!-- Bootstrap Toast Helper Functions -->
    <script>
        function showSuccessToast(title, message) {
            showToast('success', title, message, 'fas fa-check-circle', 'text-success', 'bg-success');
        }

        function showErrorToast(title, message) {
            showToast('danger', title, message, 'fas fa-exclamation-triangle', 'text-danger', 'bg-danger');
        }

        function showWarningToast(title, message) {
            showToast('warning', title, message, 'fas fa-exclamation-circle', 'text-warning', 'bg-warning');
        }

        function showInfoToast(title, message) {
            showToast('info', title, message, 'fas fa-info-circle', 'text-info', 'bg-info');
        }

        function showToast(type, title, message, iconClass, textClass, bgClass) {
            const toastId = 'toast-' + Date.now();
            const toastHtml = `
                <div class="toast align-items-center border-0 shadow-lg" id="${toastId}" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="true" data-bs-delay="5000">
                    <div class="d-flex">
                        <div class="toast-body d-flex align-items-center py-3 px-3">
                            <div class="rounded-circle ${bgClass} bg-opacity-10 p-2 me-3">
                                <i class="${iconClass} ${textClass}"></i>
                            </div>
                            <div class="flex-grow-1">
                                <div class="fw-bold ${textClass} mb-1">${title}</div>
                                <div class="text-dark small">${message}</div>
                            </div>
                        </div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                </div>
            `;
            
            $('.toast-container').append(toastHtml);
            const toastElement = document.getElementById(toastId);
            const toast = new bootstrap.Toast(toastElement);
            toast.show();
            
            // Remove toast from DOM after it's hidden
            toastElement.addEventListener('hidden.bs.toast', function () {
                toastElement.remove();
            });
        }
    </script>
    
    <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
    <script type="text/javascript" src="~/js/script.js" asp-append-version="true"></script>
    
 

    <ejs-scripts></ejs-scripts>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
