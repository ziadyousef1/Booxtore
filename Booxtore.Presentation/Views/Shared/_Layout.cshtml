                            @inject UserManager<Booxtore.Domain.Models.ApplicationUser> UserManager
                            @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle me-4" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
