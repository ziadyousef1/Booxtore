@model Booxtore.Presentation.ViewModels.EditBookViewModel

@{
    ViewData["Title"] = "Create Book";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav aria-label="breadcrumb" class="bg-light py-2">
    <div class="container-fluid">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item">
                <a asp-controller="Admin" asp-action="Index" class="text-decoration-none">
                    <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                </a>
            </li>
            <li class="breadcrumb-item">
                <a asp-controller="AdminBooks" asp-action="Index" class="text-decoration-none">
                    <i class="fas fa-book me-1"></i>Books Management
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                <i class="fas fa-plus me-1"></i>Create Book
            </li>
        </ol>
    </div>
</nav>

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Create New Book</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
                        <div class="row">
                            <div class="col-md-8">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Title" class="form-label fw-bold">Title *</label>
                                        <input asp-for="Title" class="form-control" required />
                                        <span asp-validation-for="Title" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Isbn" class="form-label fw-bold">ISBN</label>
                                        <input asp-for="Isbn" class="form-control" />
                                        <span asp-validation-for="Isbn" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="AuthorId" class="form-label fw-bold">Author</label>
                                        <select asp-for="AuthorId" asp-items="Model.Authors" class="form-select">
                                            <option value="">Select Author</option>
                                        </select>
                                        <span asp-validation-for="AuthorId" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="CategoryId" class="form-label fw-bold">Category</label>
                                        <select asp-for="CategoryId" asp-items="Model.Categories" class="form-select">
                                            <option value="">Select Category</option>
                                        </select>
                                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Description" class="form-label fw-bold">Description</label>
                                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter book description..."></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>

                                <div class="row">
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="Price" class="form-label fw-bold">Price ($)</label>
                                        <input asp-for="Price" type="number" step="0.01" class="form-control" />
                                        <span asp-validation-for="Price" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="Pages" class="form-label fw-bold">Pages</label>
                                        <input asp-for="Pages" type="number" class="form-control" />
                                        <span asp-validation-for="Pages" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="PublicationDate" class="form-label fw-bold">Publication Date</label>
                                        <input asp-for="PublicationDate" type="date" class="form-control" />
                                        <span asp-validation-for="PublicationDate" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="TotalCopies" class="form-label fw-bold">Total Copies</label>
                                        <input asp-for="TotalCopies" type="number" class="form-control" />
                                        <span asp-validation-for="TotalCopies" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="AvailableCopies" class="form-label fw-bold">Available Copies</label>
                                        <input asp-for="AvailableCopies" type="number" class="form-control" />
                                        <span asp-validation-for="AvailableCopies" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="card bg-light">
                                    <div class="card-header">
                                        <h6 class="mb-0">Book Settings</h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="mb-3">
                                            <label asp-for="Status" class="form-label fw-bold">Status</label>
                                            <select asp-for="Status" class="form-select">
                                                <option value="Available">Available</option>
                                                <option value="Out of Stock">Out of Stock</option>
                                                <option value="Coming Soon">Coming Soon</option>
                                            </select>
                                        </div>

                                        <div class="form-check mb-2">
                                            <input asp-for="IsFree" class="form-check-input" type="checkbox" />
                                            <label asp-for="IsFree" class="form-check-label">Free Book</label>
                                        </div>

                                        <div class="form-check mb-2">
                                            <input asp-for="IsAvailableForBorrow" class="form-check-input" type="checkbox" />
                                            <label asp-for="IsAvailableForBorrow" class="form-check-label">Available for Borrow</label>
                                        </div>

                                        <div class="form-check mb-3">
                                            <input asp-for="IsAvailableForPurchase" class="form-check-input" type="checkbox" />
                                            <label asp-for="IsAvailableForPurchase" class="form-check-label">Available for Purchase</label>
                                        </div>

                                        <div class="mb-3">
                                            <label asp-for="CoverImage" class="form-label fw-bold">Cover Image</label>
                                            <input asp-for="CoverImage" type="file" class="form-control" accept="image/*" />
                                            <small class="text-primary fs-6">JPG, PNG, GIF (Max 5MB)</small>
                                        </div>

                                        <div class="mb-3">
                                            <label asp-for="PdfFile" class="form-label fw-bold">PDF File</label>
                                            <input asp-for="PdfFile" type="file" class="form-control" accept=".pdf" />
                                            <small class="text-secondary fs-6">PDF only (Max 50MB)</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="d-flex gap-2">
                                    <button type="submit" class="btn btn-success">
                                        <i class="fas fa-save me-2"></i>Create Book
                                    </button>
                                    <a asp-action="Index" class="btn btn-secondary">
                                        <i class="fas fa-times me-2"></i>Cancel
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
