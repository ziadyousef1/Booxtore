@model Booxtore.Presentation.ViewModels.OrderSuccessViewModel

@{
    ViewData["Title"] = "Order Complete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row">
        <div class="col-12 text-center">
            <div class="mb-4">
                <i class="fas fa-check-circle fa-5x text-success"></i>
            </div>
            <h1 class="text-success mb-3">Order Complete!</h1>
            <p class="lead text-muted mb-4">Thank you for your purchase. Your order has been processed successfully.</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-receipt me-2"></i>Order Details
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="text-primary mb-3">Order Information</h6>
                            <p><strong>Order ID:</strong> #@Model.Order.OrderId</p>
                            <p><strong>Order Date:</strong> @Model.Order.OrderDate?.ToString("MMMM dd, yyyy 'at' h:mm tt")</p>
                            <p><strong>Payment Status:</strong> <span class="badge bg-success">@Model.Order.PaymentStatus</span></p>
                            <p><strong>Payment Method:</strong> @Model.Order.PaymentMethod</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-primary mb-3">Customer Information</h6>
                            <p><strong>Customer:</strong> @Model.Order.User?.FirstName @Model.Order.User?.LastName</p>
                            <p><strong>Email:</strong> @Model.Order.User?.Email</p>
                            <p><strong>Total Amount:</strong> <span class="fw-bold text-success">$@Model.Order.TotalAmount?.ToString("F2")</span></p>
                        </div>
                    </div>

                    <hr>

                    <h6 class="text-primary mb-3">Items Purchased</h6>
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead class="table-light">
                                <tr>
                                    <th>Book</th>
                                    <th class="text-center">Quantity</th>
                                    <th class="text-end">Unit Price</th>
                                    <th class="text-end">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Order.OrderItems)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                @if (!string.IsNullOrEmpty(item.Book?.CoverImageUrl))
                                                {
                                                    <img src="@item.Book.CoverImageUrl" alt="@item.Book.Title" 
                                                         class="me-3 rounded" style="height: 40px; width: 30px; object-fit: cover;">
                                                }
                                                <div>
                                                    <div class="fw-bold">@item.Book?.Title</div>
                                                    <small class="text-muted">Digital Book</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-center">@item.Quantity</td>
                                        <td class="text-end">$@item.UnitPrice.ToString("F2")</td>
                                        <td class="text-end fw-bold">$@item.TotalPrice.ToString("F2")</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="table-light">
                                <tr>
                                    <th colspan="3" class="text-end">Total:</th>
                                    <th class="text-end text-success">$@Model.Order.TotalAmount?.ToString("F2")</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-md-6">
                    <div class="card bg-light">
                        <div class="card-body text-center">
                            <i class="fas fa-download fa-3x text-primary mb-3"></i>
                            <h6>Download Your Books</h6>
                            <p class="small text-muted mb-3">Your digital books are now available in your library.</p>
                            <a asp-controller="Library" asp-action="Index" class="btn btn-primary">
                                <i class="fas fa-library me-2"></i>Go to My Library
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card bg-light">
                        <div class="card-body text-center">
                            <i class="fas fa-email fa-3x text-success mb-3"></i>
                            <h6>Email Receipt</h6>
                            <p class="small text-muted mb-3">A receipt has been sent to your email address.</p>
                            <a href="mailto:@Model.Order.User?.Email" class="btn btn-outline-success">
                                <i class="fas fa-envelope me-2"></i>Check Email
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-center mt-4">
                <a asp-controller="Shop" asp-action="Index" class="btn btn-outline-primary me-3">
                    <i class="fas fa-book me-2"></i>Continue Shopping
                </a>
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-home me-2"></i>Back to Home
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid bg-light py-4 mt-5">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-4">
                <i class="fas fa-mobile-alt fa-2x text-primary mb-2"></i>
                <h6>Read Anywhere</h6>
                <p class="small text-muted">Access your books on any device, anytime.</p>
            </div>
            <div class="col-md-4">
                <i class="fas fa-cloud fa-2x text-primary mb-2"></i>
                <h6>Cloud Storage</h6>
                <p class="small text-muted">Your books are safely stored in the cloud.</p>
            </div>
            <div class="col-md-4">
                <i class="fas fa-headset fa-2x text-primary mb-2"></i>
                <h6>24/7 Support</h6>
                <p class="small text-muted">Need help? Our support team is here for you.</p>
            </div>
        </div>
    </div>
</div>
